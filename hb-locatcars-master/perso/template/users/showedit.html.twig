{% extends 'base.html.twig' %}

{% block title %}
Edit user
{% endblock title %}

{% block content %}
<form action="{{env.base_path}}/users/{{user.id}}/edit" method="POST">
    <div class="form-group">
        <label for="exampleFormControlInput1">Firstname</label>
        <input name="firstname" type="text" class="form-control" id="exampleFormControlInput1" value="{{user.firstname}}">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Lastname</label>
        <input name="lastname" type="text" class="form-control" id="exampleFormControlInput1" value="{{user.lastname}}">
    </div>
    <input type="submit" value="Editer" class="btn btn-info">
</form>
{% endblock content %}